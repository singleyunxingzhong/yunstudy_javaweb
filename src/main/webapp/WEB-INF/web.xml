<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>NoodlesServlet</servlet-name>
		<display-name>NoodlesServlet</display-name>
		<description></description>
		<servlet-class>com.netease.NoodlesServlet</servlet-class>
		<init-param>
			<param-name>log4j-properties-location</param-name>
			<param-value>/WEB-INF/conf/log4j.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>PortalServlet</servlet-name>
		<display-name>PortalServlet</display-name>
		<description></description>
		<servlet-class>java.portal.PortalServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoodlesServlet</servlet-name>
		<url-pattern>/NoodlesServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PortalServlet</servlet-name>
		<url-pattern>/PortalServlet</url-pattern>
	</servlet-mapping>
</web-app>
